{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "conan_install",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "conan install . -of build -s build_type=Debug -s compiler.cppstd=20 --build=missing"
      ],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "cmake_configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "--fresh",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/build/build/generators/conan_toolchain.cmake",
        "-DCMAKE_MSVC_RUNTIME_LIBRARY=MultiThreadedDebug"
      ],
      "dependsOn": "conan_install",
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--config", "Debug"],
      "dependsOn": "cmake_configure",
      "group": "build",
      "presentation": { "reveal": "always" }
    }
    ,
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}\\build\\Debug\\sdl3_tutorial.exe",
      "dependsOn": "build",
      "group": { "kind": "build", "isDefault": true },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
